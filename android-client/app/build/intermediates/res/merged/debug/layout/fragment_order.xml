<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray2"
              android:orientation="vertical">
    /*标题*/

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">
        /*title*/

        <TextView
            android:id="@+id/title_heard"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/biankuang1_butom"
            android:gravity="center"
            android:text="我的订单"
            android:textColor="@color/colorBlack"
            android:textSize="17dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <!--<ListView
            android:id="@+id/myOrder_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:divider="#00000000"/>-->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- /*今日订单*/-->
            <TableRow
                android:id="@+id/tr_newDayAll"
                android:background="@drawable/selector_order_split"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="今日订单"
                    android:textSize="17dp"/>

                <TextView
                    android:id="@+id/tv_newDayAllCount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="查看今日所有订单（10单）>"
                    android:textSize="13dp"/>
            </TableRow>

            <TableRow
                android:background="@color/colorWhite">
                <TextView
                    android:id="@+id/tv_newDayWanCheng"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_order1_split"
                    android:gravity="center_vertical|center"
                    android:text="未完成（5单）>"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/tv_newDayYiWanCheng"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_order1_split"
                    android:gravity="center_vertical|center"
                    android:text="待付款（5单）>"
                    android:textSize="15dp"/>
            </TableRow>
            <!-- /*历史订单*/-->
            <TableRow
                android:id="@+id/tr_liShiDingDan"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_order_split"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:text="全部订单"
                    android:textSize="17dp"/>

                <TextView
                    android:id="@+id/tv_liShiAllCount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:text="查看所有订单 >"
                    android:textSize="13dp"/>
            </TableRow>

            <TableRow
                android:background="@color/colorWhite">

                <TextView
                    android:id="@+id/tv_liShiWeiWanCheng"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_order1_split"
                    android:gravity="center_vertical|center"
                    android:text="上门确认"
                    android:textSize="15dp"/>

                <TextView
                    android:id="@+id/tv_liShiYiWanCheng"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_order1_split"
                    android:gravity="center_vertical|center"
                    android:text="完工确认"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_order1_split"
                    android:gravity="center_vertical|center"
                    android:text="已取消"
                    android:textSize="15dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tr_dingDanTongJi"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_order_split">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"
                    android:text="抢新单"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:text=">"
                    android:textSize="15dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tr_keHuGuanLi"
                android:background="@drawable/selector_order1_split">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"
                    android:text="客户管理"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:text=">"
                    android:textSize="15dp"/>
            </TableRow>

            <TableRow
                android:id="@+id/tr_keHuPingJia"
                android:background="@drawable/selector_order1_split">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="10dp"
                    android:text="服务评价"
                    android:textSize="15dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:paddingRight="10dp"
                    android:text=">"
                    android:textSize="15dp"/>
            </TableRow>

        </TableLayout>
    </LinearLayout>
</LinearLayout>
