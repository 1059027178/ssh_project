<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.qianyang.ayio2o.activity.MainActivity">
    <!--主要内容-->
    <FrameLayout
        android:id="@+id/main_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_fragment_rgp">
    </FrameLayout>
    <!--导航栏-->
    <RadioGroup
        android:paddingTop="4dp"
        android:id="@+id/main_fragment_rgp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_bottom_radio_group_back"
        android:orientation="horizontal">
        <!--首页-->
        <RadioButton
            android:id="@+id/main_rbn_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_rbn_home"
            android:onClick="homeClick"/>
        <!--订单-->
        <RadioButton
            android:id="@+id/main_rbn_dingdan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_rbn_order"
            android:onClick="orderClick"/>
        <!--我的-->
        <RadioButton
            android:id="@+id/main_rbn_my"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_rbn_my"
            android:onClick="myClick"/>
    </RadioGroup>

</RelativeLayout>