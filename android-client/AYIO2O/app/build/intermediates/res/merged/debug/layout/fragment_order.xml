<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray2"
              android:orientation="vertical">
    /*标题*/

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical">
        /*title*/

        <TextView
            android:id="@+id/title_heard"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/biankuang1_butom"
            android:gravity="center"
            android:text="我的订单"
            android:textColor="@color/colorBlack"
            android:textSize="17dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0.5dp"
        android:orientation="vertical"
        android:background="@color/colorWhite">

        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <!--新闻中心-->
            <TextView
                android:id="@+id/order_tv_1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/color1"
                android:text="@string/order1"
                android:textSize="13dp"/>
            <!--<View
                android:layout_width="1px"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:background="@color/gray1"/>-->
            <!--消息-->
            <TextView
                android:id="@+id/order_tv_2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="13dp"
                android:text="@string/order2"
                android:onClick="onclick_orderTv2"/>

            <!--简介-->
            <TextView
                android:id="@+id/order_tv_3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="13dp"
                android:text="@string/order3"
                android:onClick="onclick_orderTv3"/>
            <!--简介-->
            <TextView
                android:id="@+id/order_tv_4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorBlack"
                android:textSize="13dp"
                android:text="@string/order4"
                android:onClick="onclick_orderTv4"/>
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/linearLayout_orderImg"
            android:layout_width="fill_parent"
            android:layout_height="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/order_img1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/color1"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/order_img2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/color1"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/order_img3"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/color1"
                android:visibility="invisible"/>
            <ImageView
                android:id="@+id/order_img4"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/color1"
                android:visibility="invisible"/>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/gray1"/>
        <LinearLayout
            android:id="@+id/fragment_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:id="@+id/fragmentOrder"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </FrameLayout>
        </LinearLayout>
        <!--<ListView
            android:id="@+id/myOrder_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:divider="#00000000"/>-->

    </LinearLayout>
</LinearLayout>
